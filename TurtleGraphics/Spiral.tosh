when flag clicked
pen up
clear
set pen color to #FF7F00
set pen size to 2
set x to 0
set y to 0
point in direction 0
show
pen down
set lineSize to 0.1
repeat until <lineSize > 65>
	set times to 8
	set i to 1
	repeat until <i > times>
		move (lineSize / times) steps
		turn cw (12 / times) degrees
		change i by 1
	end
	change lineSize by 0.1
end
hide